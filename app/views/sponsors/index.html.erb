<% title = "Sponsors" %>
<% content_for :title do %>
<%= page_title(title)%>
<% end %>

<div class="content_page">
    <%= render "layouts/subnav", nav_items: @subnav_items, page_title: title%>

    <div style="margin-top:20px;">
        We are still confirming sponsors for 2016. If you are interested in learning more about becoming a sponsor, please contact our Sponsorship Team at <b>summit-sponsorship at mit dot edu</b>. Thanks!
    </div>

    <% @sponsorship_list.each do |sponsorship| %>
    <h2><%= sponsorship.name %></h2>
        <% sponsorship.sponsors.each do |sponsor| %>
          <% if sponsorship.priority == 0 %>
          <div class="sponsor sponsor_big clickable" onclick="var w=window.open('<%= sponsor.url %>','_blank');w.focus();">
            <% if sponsor.logo.present? %>
              <img alt="<%= sponsor.name %>" style="width:290px;height:165px;" src="<%= sponsor.logo(:large) %>">
            <% else %>
              <div style="margin-top:38px;"><%= sponsor.name %></div>
            <% end  %>
          </div> 
          <% else %>
          <div class="sponsor sponsor_small clickable" onclick="var w=window.open('<%= sponsor.logo(:large) %>','_blank');w.focus();">
            <% if sponsor.logo.present? %>
              <img alt="{{ sponsor.name }}" style="width:210px;height:110px;" src="<%= sponsor.logo(:large) %>">
            <% else %>
              <div style="margin-top:38px;"><%= sponsor.name %></div>
            <% end %>
          </div> 
          <% end %>
        <% end %>
    <% end %>
</div>
